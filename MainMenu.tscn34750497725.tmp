[sub_resource type="GDScript" id="GDScript_i26rj"]
script/source = "extends VBoxContainer


@onready var distance_select = $TabContainer/Units/GridContainer/DistanceSelect
@onready var range_select = $TabContainer/Units/GridContainer/RangeSelect



func _on_save_pressed():
	var config = ConfigFile.new()
	var err = config.load(\"user://settings.ini\")
	config.set_value(\"Units\", \"distance_units\", distance_select.get_item_text(distance_select.selected))
	config.set_value(\"Units\", \"range_units\", range_units)
	config.set_value(\"Units\", \"altitude_units\", altitude_units)
	config.set_value(\"Units\", \"ship_speed_units\", ship_speed_units)
	config.set_value(\"Units\", \"aircraft_speed_units\", aircraft_speed_units)
	config.set_value(\"Units\", \"vertical_speed_units\", vertical_speed_units)
	config.set_value(\"Units\", \"munition_speed_units\", munition_speed_units)
	config.set_value(\"Units\", \"ship_fuel_units\", ship_fuel_units)
	config.set_value(\"Units\", \"aircraft_fuel_units\", aircraft_fuel_units)
	config.set_value(\"Units\", \"mass_units\", mass_units)
	
	config.save(\"user://settings.ini\")
"

