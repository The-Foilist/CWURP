[sub_resource type="GDScript" id="GDScript_3b2b5"]
script/source = "extends Tree


func update() -> void:
	clear()
	var root = create_item()
	for unit in Global.session.local_controller.player.units:
		var child = create_item(root)
		child.set_text(0, unit.display_name)
		child.set_metadata(0, unit)


func _on_item_mouse_selected(mouse_position, _mouse_button_index) -> void:
	Global.session.local_controller.player.select(get_item_at_position(mouse_position).get_metadata(0))


func _on_unit_selected(unit: Node2D) -> void:
	if !unit:
		return
	var item = get_root().get_first_child()
	while item != null:
		if item.get_metadata(0) == unit:
			item.select(0)
		else:
			item.deselect(0)
		item = item.get_next()
"

[sub_resource type="GDScript" id="GDScript_lgolh"]
script/source = "extends VBoxContainer


var connected_unit: Unit


func clear() -> void:
	connected_unit = null
	$GridContainer/Name.text = ''
	$GridContainer/Owner.text = ''
	for child in $ScrollContainer/InspectorsGoHere.get_children():
		$ScrollContainer/InspectorsGoHere.remove_child(child)
		child.queue_free()


func _on_unit_selected(unit: Node2D) -> void:
	clear()
	if !unit:
		return
	if !(unit is Unit):
		return
	connected_unit = unit
	$GridContainer/Name.text = connected_unit.display_name
	$GridContainer/Owner.text = connected_unit.owning_player.name
	$GridContainer/Owner.add_theme_color_override(\"font_color\", connected_unit.owning_player.color)
	
	if connected_unit.mover:
		var new_inspector = load('res://Source/UI/Inspectors/' + connected_unit.mover.inspector + '.tscn').instantiate()
		new_inspector.linked_mover = connected_unit.mover
		$ScrollContainer/InspectorsGoHere.add_child(new_inspector)
"

