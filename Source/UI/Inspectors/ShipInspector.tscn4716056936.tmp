script/source = "extends Inspector


@onready var heading_readout = $GridContainer/HeadingReadout
@onready var speed_readout = $GridContainer/SpeedReadout
@onready var rudder_readout = $GridContainer/RudderReadout
@onready var power_readout = $GridContainer/PowerReadout
@onready var fuel_readout = $GridContainer/FuelReadout
@onready var fuel_max_readout = $GridContainer/FuelMaxReadout
@onready var fuel_percent_readout = $GridContainer/FuelPercentReadout
@onready var endurance_readout = $GridContainer/EnduranceReadout
@onready var range_readout = $GridContainer/RangeReadout
@onready var status_readout = $StatusReadout


func _ready() -> void:
	if linked_actor.owning_player != Global.session.local_controller.player:
		var delete_me = $Orders
		remove_child(delete_me)
		delete_me.queue_free()
		delete_me = $StatusReadout
		remove_child(delete_me)
		delete_me.queue_free()
		for child in $GridContainer.get_children():
			if ![$GridContainer/HeadingLabel, $GridContainer/SpeedLabel, heading_readout, speed_readout].has(child):
				$GridContainer.remove_child(child)
				child.queue_free()


func _process(delta: float) -> void:
	super(delta)
	
	heading_readout.text = \"%03.1f Â°\" % linked_actor.heading
	speed_readout.text = \"%.1f \" % (linked_actor.speed / Global.SPEED_CONVERSION[PlayerSettings.ship_speed_units]) + PlayerSettings.ship_speed_units
	if linked_actor.owning_player != Global.session.local_controller.player:
		return
	rudder_readout.value = linked_actor.rudder.pos
	power_readout.text = \"%.f %%\" % (linked_actor.powerplant.setting * 100)
	fuel_readout.text = \"%.1f \" % (linked_actor.powerplant.fuel * 1000 / Global.MASS_CONVERSION['t']) + 't'
	fuel_max_readout.text = \"/ %.1f \" % (linked_actor.powerplant.fuel_max * 1000 / Global.MASS_CONVERSION['t']) + 't'
	fuel_percent_readout.text = \"(%.f %%)\" % (linked_actor.powerplant.fuel * 100 / linked_actor.powerplant.fuel_max)
	endurance_readout.text = Global.seconds_to_time_string(linked_actor.fuel_endurance)
	range_readout.text = \"%.1f \" % (linked_actor.fuel_range / Global.DISTANCE_CONVERSION[PlayerSettings.distance_units]) + PlayerSettings.distance_units
	if linked_actor.behavior:
		status_readout.text = str(linked_actor.behavior)
	else:
		status_readout.text = \"Maintaining course and speed\"
"

